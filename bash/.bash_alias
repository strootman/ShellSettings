# User specific aliases and functions
alias ll="ls -l --block-size=\'1 --color=auto"
alias la='ls -A'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias h='history'
alias ..='cd ..'
alias ...='cd ../..'
alias push='pushd'
alias pop='popd'
alias pbcopy='xsel --clipboad --input'
alias pbpaste='xsel --clipboard --output'
alias memused="free | grep Mem | awk '{print \$3/\$2 * 100.0}'"
alias nuke-it-from-orbit='rm -rf Â $(ls -a | grep -v "^\.*$") && git init'
alias formatjson='pbpaste | python -m json.tool | pbcopy'
alias cleanHistory="h | awk '{\$1=\"\"; print}'"

# Gradle aliases
alias grademon='gradle --daemon'
